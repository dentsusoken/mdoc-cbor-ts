{
  "name": "@vecrea/mdoc-cbor-ts",
  "version": "0.1.0",
  "description": "A TypeScript implementation for handling Mobile Document (MDOC) issuance and verification according to ISO/IEC 18013-5 standard",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "npm run typecheck && vite build",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm test && npm run build",
    "test": "vitest run --run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint ./lib --ext .ts",
    "lint:fix": "eslint ./lib --ext .ts --fix"
  },
  "devDependencies": {
    "@auth0/cose": "^1.0.2",
    "@auth0/mdl": "^3.0.0",
    "@edge-runtime/vm": "^5.0.0",
    "@types/jsrsasign": "^10.5.15",
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^16.0.0",
    "typescript": "^5.4.5",
    "vite": "^6.4.1",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "@noble/curves": "^1.9.7",
    "@noble/hashes": "^1.8.0",
    "cbor-x": "^1.6.0",
    "jsrsasign": "^11.1.0",
    "noble-curves-extended": "^0.2.11",
    "u8a-utils": "^1.0.12",
    "zod": "^3.25.76"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dentsusoken/mdoc-cbor-ts.git"
  },
  "keywords": [
    "mdoc",
    "mdl",
    "iso-18013-5",
    "mobile-document",
    "cbor",
    "cose",
    "verifiable-credentials",
    "oid4vc",
    "typescript"
  ],
  "license": "Apache-2.0"
}
